<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

       <TextView
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:textColor="#ffffff"
           android:background="#CA091181"
           android:textSize="30dp"
           android:id="@+id/Blue"
           android:gravity="center"
           android:text="Blue"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintBottom_toTopOf="@id/Blue"
        android:textColor="#ffffff"
        android:background="#1EBE24"
        android:textSize="30dp"
        android:id="@+id/Green"
        android:gravity="center"
        android:text="Green"
        app:layout_constraintLeft_toLeftOf="@id/Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintBottom_toTopOf="@id/Green"
        android:textColor="#ffffff"
        android:background="#BE1E33"
        android:textSize="30dp"
        android:id="@+id/Red"
        android:gravity="center"
        android:text="Red"
        app:layout_constraintLeft_toLeftOf="@id/Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/Blue"
        android:textColor="#ffffff"
        android:background="#C29A23"
        android:textSize="30dp"
        android:id="@+id/Orange"
        android:gravity="center"
        android:text="Orange"
        app:layout_constraintLeft_toLeftOf="@id/Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/Orange"
        android:textColor="#ffffff"
        android:background="#7D7B75"
        android:textSize="30dp"
        android:id="@+id/Gray"
        android:gravity="center"
        android:text="Gray"
        app:layout_constraintLeft_toLeftOf="@id/Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/Gray"
        android:textColor="#ffffff"
        android:background="#FCA947A1"
        android:textSize="30dp"
        android:id="@+id/Prink"
        android:gravity="center"
        android:text="Prink"
        app:layout_constraintLeft_toLeftOf="@id/Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
