<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

     <TextView
           android:textColor="#ffffff"
           app:layout_constraintLeft_toLeftOf="parent"
           android:paddingVertical="5dp"
           app:layout_constraintRight_toRightOf="parent"
           android:background="#DCEF202D"
           android:textSize="25dp"
           android:id="@+id/tex1"
           android:gravity="center"
           android:text="Top Content Here "
           app:layout_constraintTop_toTopOf="parent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
<androidx.constraintlayout.widget.ConstraintLayout
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tex3"
        android:paddingHorizontal="5dp"
        android:background="#28E130"
        android:textSize="25dp"
        android:id="@+id/tex2"
        android:gravity="center"
        android:text="First "
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingHorizontal="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#284AE1"
        android:textSize="25dp"
        android:id="@+id/tex3"
        android:gravity="center"
        android:text="Second "
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tex3"
        android:paddingHorizontal="5dp"
        android:background="#FFC107"
        android:textSize="25dp"
        android:id="@+id/tex4"
        android:gravity="center"
        android:text="Three "
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingHorizontal="5dp"
        android:background="#839183"
        android:textSize="25dp"
        android:id="@+id/tex5"
        android:gravity="center"
        android:text="Bottom Content Here "
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
