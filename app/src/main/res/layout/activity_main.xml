<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

     <TextView
           app:layout_constraintLeft_toLeftOf="parent"
           android:paddingHorizontal="30dp"
           android:background="#BB7815"
           android:textSize="30dp"
           android:id="@+id/tex1"
           android:gravity="center"
           android:text="6"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintRight_toRightOf="parent"
        android:paddingHorizontal="30dp"
        android:background="#22BCAE"
        android:textSize="30dp"
        android:id="@+id/tex2"
        android:gravity="center"
        android:text="7"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingHorizontal="30dp"
        android:background="#132899"
        android:textSize="30dp"
        android:id="@+id/tex3"
        android:gravity="center"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintRight_toRightOf="parent"
        android:paddingHorizontal="30dp"
        android:background="#FF9800"
        android:textSize="30dp"
        android:id="@+id/tex4"
        android:gravity="center"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingHorizontal="30dp"
        android:background="#FF0022"
        android:textSize="30dp"
        android:id="@+id/text5"
        android:gravity="center"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintRight_toLeftOf="@id/text5"
        android:paddingHorizontal="30dp"
        android:background="#DC0A4E0D"
        android:textSize="30dp"
        android:id="@+id/tex6"
        android:gravity="center"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintRight_toLeftOf="@id/text5"
        android:paddingHorizontal="30dp"
        android:background="#97D949"
        android:textSize="30dp"
        android:id="@+id/tex7"
        android:gravity="center"
        android:text="3"
        app:layout_constraintTop_toBottomOf="@id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintLeft_toRightOf="@id/text5"
        android:paddingHorizontal="30dp"
        android:background="#6C0F7B"
        android:textSize="30dp"
        android:id="@+id/tex8"
        android:gravity="center"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintLeft_toRightOf="@id/text5"
        android:paddingHorizontal="30dp"
        android:background="#743935"
        android:textSize="30dp"
        android:id="@+id/tex9"
        android:gravity="center"
        android:text="5"
        app:layout_constraintTop_toBottomOf="@id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
