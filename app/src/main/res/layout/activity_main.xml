<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <androidx.constraintlayout.widget.ConstraintLayout
       app:layout_constraintWidth_percent="0.25"
       app:layout_constraintBottom_toTopOf="@id/constraintgroup2"
       android:id="@+id/constraintgroup1"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toLeftOf="@id/constraintgroup2"
       app:layout_constraintLeft_toLeftOf="parent"
       android:layout_width="0dp"
       android:layout_height="match_parent">
       <TextView
           app:layout_constraintBottom_toTopOf="@id/text2"
           app:layout_constraintHeight_percent="0.5"
           android:background="#0C8109"
           android:textSize="30dp"
           android:id="@+id/text1"
           android:gravity="center"
           android:text="1"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_width="match_parent"
           android:layout_height="0dp"/>
       <TextView
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintHeight_percent="0.5"
           android:background="#6CBA6F"
           android:textSize="30dp"
           android:id="@+id/text2"
           android:gravity="center"
           android:text="2"
           app:layout_constraintRight_toLeftOf="@id/text2"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@id/text1"
           android:layout_width="match_parent"
           android:layout_height="0dp"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toTopOf="@id/constraintgroup3"
        app:layout_constraintHeight_percent="0.5"
        android:id="@+id/constraintgroup2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/constraintgroup1"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <TextView
            app:layout_constraintBottom_toTopOf="@id/text4"
            app:layout_constraintHeight_percent="0.5"
            android:background="#B00A21"
            android:textSize="30dp"
            android:id="@+id/text3"
            android:gravity="center"
            android:text="3"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/text3"
            app:layout_constraintHeight_percent="0.5"
            android:background="#91433D"
            android:textSize="30dp"
            android:id="@+id/text4"
            android:gravity="center"
            android:text="4"
            app:layout_constraintRight_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toBottomOf="@id/constraintgroup2"
        android:id="@+id/constraintgroup3"
        app:layout_constraintLeft_toRightOf="@id/constraintgroup1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <TextView
            app:layout_constraintRight_toLeftOf="@id/text7"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text6"
            app:layout_constraintHeight_percent="0.5"
            android:background="#03A9F4"
            android:textSize="30dp"
            android:id="@+id/text5"
            android:gravity="center"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <TextView
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/text9"
            app:layout_constraintHeight_percent="0.5"
            android:background="#6A0B7A"
            android:textSize="30dp"
            android:id="@+id/text6"
            android:gravity="center"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <TextView
            app:layout_constraintBottom_toTopOf="@id/text8"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_percent="0.34"
            android:background="#591565"
            android:textSize="30dp"
            android:id="@+id/text7"
            android:gravity="center"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <TextView
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintBottom_toTopOf="@id/text9"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_percent="0.33"
            android:background="#FF9800"
            android:textSize="30dp"
            android:id="@+id/text8"
            android:gravity="center"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <TextView
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_percent="0.33"
            android:background="#D6C4D9"
            android:textSize="30dp"
            android:id="@+id/text9"
            android:gravity="center"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
